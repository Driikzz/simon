<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fr.esgi.simon.controller.ChoixJoueursController">
    <Label text="Choisissez le nombre de joueurs" style="-fx-font-size: 18px;" />

    <ComboBox fx:id="comboNombreJoueurs" prefWidth="200" />

    <Button text="Valider" onAction="#handleValider" style="-fx-font-size: 16px;" />
    <Button text="Retour" onAction="#handleRetour" style="-fx-font-size: 16px;" />
</VBox>
